{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ]
    },
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "dist",
    "types": [
      "react",
      "react-native"
    ]
  },
  "include": [
    "./**/*",
    "../../packages/**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
